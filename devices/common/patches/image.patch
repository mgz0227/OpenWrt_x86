--- a/include/image.mk
+++ b/include/image.mk
@@ -45,7 +45,13 @@
 IMG_PREFIX_VERNUM:=$(if $(CONFIG_VERSION_FILENAMES),$(call sanitize,$(VERSION_NUMBER))-)
 IMG_PREFIX_VERCODE:=$(if $(CONFIG_VERSION_CODE_FILENAMES),$(call sanitize,$(VERSION_CODE))-)
 
-IMG_PREFIX:=$(VERSION_DIST_SANITIZED)-$(IMG_PREFIX_VERNUM)$(IMG_PREFIX_VERCODE)$(IMG_PREFIX_EXTRA)$(BOARD)-$(SUBTARGET)
+#
+# 自定义固件命名规则：MeowWrt-月.日.年-架构-子目标
+# 示例输出：
+#   MeowWrt-09.28.2025-x86-64-generic-squashfs-combined-efi.img.gz
+#
+BUILD_DATE := $(shell date +%m.%d.%Y)
+IMG_PREFIX := MeowWrt-$(BUILD_DATE)-$(BOARD)-$(SUBTARGET)
 IMG_ROOTFS:=$(IMG_PREFIX)-rootfs
 IMG_COMBINED:=$(IMG_PREFIX)-combined
